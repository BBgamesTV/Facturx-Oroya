{% extends 'base.html.twig' %}

{% block title %}Liste des factures
{% endblock %}

{% block body %}
	<div class="flex justify-between items-center mb-6">
		<h1 class="text-2xl font-bold">📑 Liste des factures</h1>
		<a href="{{ path('invoice_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg shadow">
			➕ Nouvelle facture
		</a>
	</div>

	{% for message in app.flashes('success') %}
		<div class="mb-4 p-3 bg-green-100 text-green-800 border border-green-300 rounded">
			✅
			{{ message }}
		</div>
	{% endfor %}

	<div class="bg-white shadow rounded-lg overflow-hidden">
		<table class="w-full text-left border-collapse">
			<thead class="bg-gray-100 text-gray-700 uppercase text-sm">
				<tr>
					<th class="px-4 py-3">#</th>
					<th class="px-4 py-3">Numéro</th>
					<th class="px-4 py-3">Date</th>
					<th class="px-4 py-3">Devise</th>
					<th class="px-4 py-3 text-right">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for invoice in invoices %}
					<tr class="border-b hover:bg-gray-50">
						<td class="px-4 py-3">{{ invoice.id }}</td>
						<td class="px-4 py-3 font-semibold">{{ invoice.invoiceNumber }}</td>
						<td class="px-4 py-3">{{ invoice.issueDate|date('d/m/Y') }}</td>
						<td class="px-4 py-3">{{ invoice.currency }}</td>
						<td class="px-4 py-3 text-right space-x-2">
							<a href="{{ path('invoice_show', {id: invoice.id}) }}" class="px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded hover:bg-blue-200">
								👁 Voir
							</a>
							<a href="{{ path('invoice_edit', {id: invoice.id}) }}" class="px-3 py-1 text-sm bg-yellow-100 text-yellow-700 rounded hover:bg-yellow-200">
								✏ Modifier
							</a>
							<a href="{{ path('invoice_delete', {id: invoice.id}) }}" class="px-3 py-1 text-sm bg-red-100 text-red-700 rounded hover:bg-red-200" onclick="return confirm('Voulez-vous vraiment supprimer cette facture ?');">
								🗑 Supprimer
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5" class="px-4 py-6 text-center text-gray-500">
							Aucune facture trouvée.
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

