{% extends 'base.html.twig' %}

{% block title %}Modifier la facture
	{{ invoice.invoiceNumber }}
{% endblock %}

{% block body %}
	<div class="mb-6 flex justify-between items-center">
		<h1 class="text-2xl font-bold">‚úè Modifier la facture
			{{ invoice.invoiceNumber }}</h1>
		<a href="{{ path('invoice_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg">
			‚¨Ö Retour
		</a>
	</div>

	<div class="bg-white shadow rounded-lg p-6">
		{{ form_start(form) }}
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div>
				{{ form_label(form.invoiceNumber, 'Num√©ro de facture', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
				{{ form_widget(form.invoiceNumber, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm'}}) }}
				{{ form_errors(form.invoiceNumber) }}
			</div>

			<div>
				{{ form_label(form.issueDate, 'Date d‚Äô√©mission', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
				{{ form_widget(form.issueDate, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm'}}) }}
				{{ form_errors(form.issueDate) }}
			</div>

			<div>
				{{ form_label(form.currency, 'Devise', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
				{{ form_widget(form.currency, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm'}}) }}
				{{ form_errors(form.currency) }}
			</div>

			<div class="md:col-span-2">
				{{ form_label(form.note, 'Note', {'label_attr': {'class': 'block mb-1 font-semibold'}}) }}
				{{ form_widget(form.note, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm'}}) }}
				{{ form_errors(form.note) }}
			</div>
		</div>

		<div class="mt-6 flex space-x-3">
			<button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg shadow">
				üíæ Enregistrer
			</button>
			<a href="{{ path('invoice_index') }}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg">
				‚ùå Annuler
			</a>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

